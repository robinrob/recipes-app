%div{'recipes-nav' => '', 'nav-title' => "Recipes App"}
#container.container
  .recipe-wrapper
    .recipe-head.recipe-label
      %h1 {{ recipe.name }}
      %caption Origin: {{ recipe.origin }}
    .recipe-body
      %h3 Ingredients
      %ul
        %div{'ng-repeat' => 'ingredient in recipe.ingredients'}
          %li
            {{ ingredient.name }}: {{ ingredient.amount }} {{ ingredient.unit }}
      %h3 Method
      %ul
        %div{'ng-repeat' => 'stage in recipe.method'}
          %h4
            {{ stage.description }}
            %ul
              %div{'ng-repeat' => 'step in stage.steps'}
                %li
                  {{ step }}

  %a{'ng-click' => 'edit()'} Edit